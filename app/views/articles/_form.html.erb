<div class="row">
  <div class="col-8 offset-3">
    
    <%= form_with model:article, local: true do |f| %>
    <div class="row form-group">
      <div class="image">
        <%= f.label :image, "投稿画像", class: "col-3" %>
        <div class="col-4 offset-3">
          <%= attachment_image_tag(article, :image, fallback: "no_image.png", size: "100x100", class: "offset-10") %>
          <%= f.attachment_field :image, id: "article_image" %>
        </div>
      </div>
    </div>
    
    <div class="row form-group">
      <div class="col-9">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
    
    <div class="row form-group">
      <div class="col-9">
        <%= f.label :tag_list, "タグ" %>
        <%= f.text_field :tag_list, value: @article.tag_list.join(','), id: 'article-tags', class: "form-control", data: {role: "tagsinput"}  %>
      </div>
    </div>
    
    <div class="row form-group">
      <div class="col-9">
        <%= f.label :body, "投稿内容" %>
        <%= f.text_area :body, class: "form-control", style: "height: 1000px;" %>
      </div>
    </div>
    
    <div class="raw form-group offset-3">
      <div class="col-4">
        <%= f.submit "投稿", class: "btn btn-success btn-block" %>
      </div>
    </div>
    
    <% end %>
  </div>
</div>