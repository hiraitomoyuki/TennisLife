<%= render 'layouts/error_messages', object: @event %>
<div class="container">
  <h1 class="page-title text-center">予定編集</h1>
	
  <div class="row">
    <div class="col-8 offset-4">
      
      <div class="form-horizontal">
        <%= form_with model: @event do |f| %>
          <%= f.hidden_field :circle_id, :value => @event.circle_id %>
          
          <div class="form-group">
            <%= f.label :title, "件名", class: "col-2" %>
            <div class="col-5">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :description, "詳細", class: "col-2" %>
            <div class="col-5">
              <%= f.text_area :description, class: "form-control", style: "height: 300px;"  %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :start, "開始日時", class: "col-2" %>
            <div class="col-6">
              <%= f.datetime_select :start_date, default: @event.start_date ,use_month_numbers: true, minute_step: 10, class: "form-control"  %>
            </div>
          </div>
          
          <div class="form-group">
            <%= f.label :end, "終了日時", class: "col-2" %>
            <div class="col-6">
              <%= f.datetime_select :end_date, default: @event.end_date ,use_month_numbers: true, minute_step: 10, class: "form-control"  %>

            </div>
          </div>
          
          <div class="form-group">
            <div class="col-5">
              <%= f.submit "更新", class: "btn btn-success btn-block" %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-5">
              <%= link_to "戻る", events_path(circle_id: @event.circle_id), class: "btn btn-primary btn-block" %>
            </div>
          </div>
          
        <% end %>
      </div>
    </div>
	</div>
</div>