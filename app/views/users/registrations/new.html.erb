<div class="text-center">
  <h1 class="page-title">新規登録</h1>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-8 offset-2">
      <div class="form-horizontal">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <%= f.label :nickname, "ニックネーム", class: "col-3" %>
            <div>
              <%= f.text_field :nickname, class: "form_control" %>
            </div>
          </div>

           <div class="form-group">
            <%= f.label :email, "メールアドレス", class: "col-3" %>
            <div>
              <%= f.email_field :email, class: "form_control" %>
            </div>
          </div>

           <div class="form-group">
            <%= f.label :password, "パスワード(6文字以上)", class: "col-3" %>
            <div>
              <%= f.password_field :password, autocomplete: "new_password", class: "form_control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード確認", class: "col-3" %>
            <div>
              <%= f.password_field :password_confirmation, autocomplete: "new_password", class: "form_control" %>
            </div>
          </div>

          <div class="form_group offset-2">
            <div class="col-3 offset-3">
              <%= f.submit "新規登録", class: "btn btn-success btn-block col-7 offset-4" %>
              <%= link_to "=> ログインはこちら", new_session_path(resource_name), class: "text-center offset-3" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

