<div class="page-title text-center">
  <h1>お問い合わせ</h1>
</div>

<div class="error">
  <%= render "layouts/error_messages", object: @contact %>
</div>

<%= form_for(@contact, url: confirms_path) do |f| %>
  <div class="offset-4">
    <div style="padding: 20px 0 0 0;">
      <div class="form-group col-6">
        <%= f.label :name, 'お名前*' %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    
    <div class="form-group col-6">
      <%= f.label :email, 'メールアドレス*' %>
      <%= f.text_field :email, size: '10x10', class: 'form-control' %>
    </div>
    
    <div class="form-group col-6">
      <%= f.label :subject, '件名*' %>
      <%= f.text_field :subject, size: '10x10', class: 'form-control' %>
    </div>
    
    <div class="form-group col-6">
      <%= f.label :message, 'メッセージ*' %>
      <%= f.text_area :message, size: '10x10', class: 'form-control' %>
    </div>
    
    <div class="col-2 offset-2">
      <%= f.submit '入力内容確認', class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>