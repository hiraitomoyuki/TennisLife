<div class="modal" id="new_schedul" tabindex="-1" role="daialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">予定登録</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
    
    <div class="modal-body">
      <div class="form-group field">
        <%= form_with model: @schedul, remote: true do |f| %>
          <div class="form-inputs">
            
            <div class="form-group">
              <%= f.label :title, "件名", class: "form-control-label" %>
              <div class="input-group" data-target-input="nearest">
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :description, "詳細", class: "form-control-label" %>
              <div class="input-group" data-target-input="nearest">
                <%= f.text_field :description, class: "form-control" %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :start_date, "開始日時", class: "form-control-label" %>
              <div class="input-group" data-target-input="nearest">
                <%= f.text_field :start_date, class: "form-control" %>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :end_date, "終了日時", class: "form-control-label" %>
              <div class="input-group" data-target-input="nearest">
                <%= f.text_field :end_date, class: "form-control" %>
              </div>
            </div>
          </div>
          
          <div class="modal-footer actions">
            <%= f.submit "登録", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>