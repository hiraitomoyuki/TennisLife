<header>
  <nav class="navbar navbar-expand-lg navbar-light ">
    <div class="container-fluid">
      
      <h1><%= link_to root_path, class:"navbar-brand" do %>
          <%= image_tag 'text_logo.png', :size =>'300x80' %>
          <% end %>
      </h1>
      
      <ul class="navbar-nav justify-content-end navbar-right">
        <% if user_signed_in? %>
          <li class="nav-item"><div class="list">ログイン : <%= current_user.nickname %> さん</div></li>
          <li>
            <%= link_to "通知", notifications_path(user_id: current_user.id), class:"nav-link"  %>
              <!-- 未確認の通知があるか判定 -->
              <% if unchecked_notifications.any? %>
                <%= icon "fas", "circle", class: "n-circle", style: "font-size: 15px;" %>
              <% end %>
          </li>
          <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "技術相談所", topics_path, class:"nav-link" %></li>
          <li class="nav-item">
            <% if current_user.circle_id.present? %>
              <%= link_to "所属サークル", circle_path(current_user.circle), class:"nav-link" %>
            <% end %>
          </li>
          <li class="nav-item"><%= link_to "サークル検索", circles_path, class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "サークル活動記録", articles_path, class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-link" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "新規登録", new_user_registration_path, class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class:"nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>